      hctl:hasOperationType td:invokeAction
    ];
    td:hasInputSchema [ a js:ArraySchema, was:Coordinates;
      js:minItems "4"^^xsd:int;
      js:maxItems "4"^^xsd:int;
      js:items [ a js:IntegerSchema;
        js:minimum "0"^^xsd:int;
